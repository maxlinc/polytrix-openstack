#!/bin/bash
gem install bundler --no-ri --no-rdoc
rbenv rehash
bundle update
virtualenv polytrix_venv
source polytrix_venv/bin/activate
pip install --upgrade wadl2swagger
wadlcrawler http://api.rackspace.com/wadls/
# Unfortunately cloud_monitoring.wadl isn't usable yet
rm wadls/cloud_monitoring.wadl
wadl2swagger --autofix wadls/*.wadl --swagger-dir pacto/swagger/
export PATH="$PATH:`pwd`/node_modules/.bin"
bundle exec polytrix clone
bundle exec rake bootstrap
cp -r doc-src docs/
